<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CreateNewCourse">

    <EditText
        android:id="@+id/courseNameTextView2"
        android:layout_width="265dp"
        android:layout_height="56dp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Course Name"
        android:textColor="@color/dark"
        android:textColorHint="@color/semiDark"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/batchTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/createCourseButton"
        android:layout_marginBottom="252dp"
        android:onClick="createCourse"
        android:text="Create Course"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:shadowColor="#332E2E"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textSize="16sp"
        android:background="@color/neon"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/batchTextView2"
        android:layout_width="265dp"
        android:layout_height="56dp"
        android:layout_marginBottom="64dp"
        android:textColor="@color/dark"
        android:textColorHint="@color/semiDark"
        android:ems="10"
        android:hint="Batch"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/createCourseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>